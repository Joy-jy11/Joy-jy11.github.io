---
import { Image as AstroImage } from "astro:assets";

interface Props {
  source: ImageMetadata;
  altText: string;
  width?: number;
  height?: number;
  class?: string; // <- allow class from parent
}

const { source, altText, width, height, class: className } = Astro.props;
---

<AstroImage
  class={`rounded-lg max-h-[70rem] object-contain !px-0 ${className ?? ""}`}
  src={source}
  alt={altText}
  width={width}
  height={height}
/>
